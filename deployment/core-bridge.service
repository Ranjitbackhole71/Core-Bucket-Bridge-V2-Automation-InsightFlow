[Unit]
Description=Core-Bucket Bridge API Service
After=network.target

[Service]
Type=simple
User=corebridge
WorkingDirectory=/opt/core-bucket-bridge
ExecStart=/usr/bin/python3 /opt/core-bucket-bridge/core_bucket_bridge.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target